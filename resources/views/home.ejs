<section class="hero py-16">
  <div class="container mx-auto flex items-center justify-between">
    <div class="w-1/2">
      <h6 class="text-sm lg:text-lg"><em>Are you hungry?</em></h6>
      <h1 class="text-3xl md:text-6xl font-bold">Don't wait !</h1>
      <a href="#order-list"
        ><button
          class="
            order-now
            py-1
            lg:py-2
            px-3
            lg:px-6
            rounded-full
            mt-6
            flex
            items-center
            font-bold
          "
        >
          Order Now
        </button></a
      >
    </div>
    <div class="w-1/2">
      <img class="logo-img" src="/public/img/hero-pizza.png" />
    </div>
  </div>
</section>
<section class="menu container mx-auto py-8" id="order-list">
  <h1 class="text-xl font-bold mb-8">All Pizzas</h1>
  <div
    class="
      grid grid-cols-1
      md:grid-cols-2
      lg:grid-cols-3
      xl:grid-cols-4
      gap-x-12 gap-y-16
    "
  >
    <%pizzas.forEach(function(pizza){%>
    <div class="w-full md:w-64">
      <div>
        <img
          class="logo-img h-40 mx-auto mb-4"
          src="/public/img/<%= pizza.image%>"
          alt="pizza"
        />
      </div>
      <div class="text-center">
        <h1 class="mb-4 text-lg font-bold"><%=pizza.name%></h1>
        <span class="size py-1 px-4 rounded-full uppercase text-xs"
          ><%=pizza.size%></span
        >
        <div class="flex items-center justify-around mt-6">
          <span class="font-bold text-lg">â‚¹<%=pizza.price%></span>
          <button
            class="
              add_to_cart
              py-1
              px-6
              rounded-full
              flex
              items-center
              font-bold
            "
            data-pizza="<%=JSON.stringify(pizza)%>"
          >
            <span>+</span>
            <span class="ml-4">Add</span>
          </button>
        </div>
      </div>
    </div>
    <%})%>
  </div>
</section>
